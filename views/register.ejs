<% layout('../layout/boilerplate') %>

<body style="background-repeat:no-repeat; background-size:cover;background-image:url(background.jpg);">
    <center>
        <div style="margin-top: 3%;"></div>
        <div class="card" style="width: 30%;background-color: #292626;">
            <div style="margin-top: 15%;"></div>
            <div class="card-body">
                <h5 class="card-title" style="color: white;">REGISTER</h5>
                <hr class="solid" style="width: 70%; height: 2px; background-color:seagreen">
                <form action="/register" method="POST">
                    <div class="mb-3 row">
                        <label for="Name" class="col-sm-3 col-form-label" style="margin-left: 5%; color: white;">Name
                        </label>
                        <div class="col-sm-10">
                            <input name="username" style="margin-left: 9%;" class="form-control" type="text" placeholder="Full Name"
                                aria-label="default input example">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for=" Email" class="col-sm-3 col-form-label"
                            style="margin-left: 5%; color: white;">Email</label>
                        <div class="col-sm-10">
                            <input  name="email" style="margin-left: 9%;" type="email" class="form-control" id="exampleFormControlInput1"
                                placeholder="name@example.com">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="inputPassword" class="col-sm-4 col-form-label"
                            style="margin-left: 5%;color: white;">Password</label>
                        <div class="col-sm-10">
                            <input style="margin-left: 9%;" name="password" type="password" class="form-control" id="inputPassword" style="margin-left: 10%;">
                        </div>
                    </div>
                   
                    <br>
                    <button  class="btn btn-primary"  style="margin-right: 3%; margin-bottom:10%; background-color: rgb(62, 73, 218); width: 80%;">REGISTER</button>
                </form>
                
            </div>
        </div>
    </center>
</body>
